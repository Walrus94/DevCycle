# DevCycle Environment Configuration
# Copy this file to .env and update the values as needed

# PostgreSQL Database Configuration (for Docker Compose)
POSTGRES_DB=devcycle
POSTGRES_USER=postgres
POSTGRES_PASSWORD=devcycle123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# pgAdmin Configuration
PGADMIN_EMAIL=admin@devcycle.dev
PGADMIN_PASSWORD=admin123

# Default User Credentials (for development)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_USER_USERNAME=user
DEFAULT_USER_PASSWORD=user123

# Database Configuration (for application - uses DB_ prefix)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=devcycle123
DB_DATABASE=devcycle

# Database Connection String (for Alembic and application)
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}
