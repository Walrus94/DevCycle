# DevCycle Environment Configuration Template
# Copy this file to config.env and update the values as needed
# DO NOT commit config.env to version control

# PostgreSQL Database Configuration (for Docker Compose)
POSTGRES_DB=devcycle
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# pgAdmin Configuration
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=your_secure_pgadmin_password

# Default User Credentials (for development only - change in production)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=your_secure_admin_password
DEFAULT_USER_USERNAME=user
DEFAULT_USER_PASSWORD=your_secure_user_password

# Database Configuration (for application - uses DB_ prefix)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_DATABASE=devcycle

# Database Connection String (for Alembic and application)
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}

# Security Settings
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: Redis Configuration (if using Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# Optional: External API Keys
# OPENAI_API_KEY=your_openai_api_key
# HUGGINGFACE_API_KEY=your_huggingface_api_key
