# Production Environment Configuration
# This file contains production-specific settings
# IMPORTANT: Update all values before deploying to production!

# Environment
ENVIRONMENT=production
DEBUG=false

# Database (MUST be configured for production)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=your-production-db-user
DB_PASSWORD=your-secure-production-password
DB_DATABASE=devcycle_prod
DB_ECHO=false

# Security (MUST be configured for production - use external secret management)
SECURITY_SECRET_KEY=your-very-secure-production-secret-key-here
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=15
SECURITY_JWT_LIFETIME_SECONDS=900

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_CORS_ORIGINS=["https://yourdomain.com"]
API_CORS_CREDENTIALS=false

# GCP Load Balancer Configuration (SSL handled by GCP)
API_GCP_LOAD_BALANCER_ENABLED=true
API_TRUST_PROXY=true

# Logging
LOG_LEVEL=INFO
LOG_JSON_OUTPUT=true
LOG_LOG_FILE=/var/log/devcycle/app.log

# Redis (production)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Hugging Face (production)
HF_TOKEN=your-huggingface-token
HF_ORG_NAME=your-org-name

# Agent Configuration (production)
AGENT_MAX_EXECUTION_TIME=600
AGENT_MAX_MEMORY_USAGE=2048
AGENT_ENABLE_LOGGING=true
AGENT_ENABLE_METRICS=true
AGENT_MODEL_NAME=gpt-4
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2000
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=2.0
