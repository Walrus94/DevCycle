# Testing Environment Configuration
# This file contains testing-specific settings

# Environment
ENVIRONMENT=testing
DEBUG=false

# Database
DB_HOST=localhost
DB_PORT=5434
DB_USERNAME=test_user
DB_PASSWORD=test_password
DB_DATABASE=devcycle_test
DB_ECHO=false

# Security (testing - must be configured)
SECURITY_SECRET_KEY=your-testing-secret-key-here
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=5
SECURITY_JWT_LIFETIME_SECONDS=300

# API
API_HOST=127.0.0.1
API_PORT=8001
API_RELOAD=false
API_CORS_ORIGINS=["*"]
API_CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=WARNING
LOG_JSON_OUTPUT=true
LOG_LOG_FILE=

# Redis (testing - use different DB)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=1

# Hugging Face (testing - use mock)
HF_TOKEN=
HF_ORG_NAME=

# Agent Configuration (testing - faster timeouts)
AGENT_MAX_EXECUTION_TIME=30
AGENT_MAX_MEMORY_USAGE=512
AGENT_ENABLE_LOGGING=false
AGENT_ENABLE_METRICS=false
AGENT_MODEL_NAME=gpt-3.5-turbo
AGENT_TEMPERATURE=0.1
AGENT_MAX_TOKENS=100
AGENT_MAX_RETRIES=1
AGENT_RETRY_DELAY=0.1

# Test Configuration
TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_password@localhost:5434/devcycle_test
TEST_API_HOST=127.0.0.1
TEST_API_PORT=8001
TEST_TIMEOUT=60
TEST_PARALLEL_WORKERS=2
TEST_RETRY_ATTEMPTS=1
